@{
    ViewBag.Name = "myWall";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Name - @ViewBag.Title </title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    


</head>
<body class="parallax">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                @Html.ActionLink("myWall", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Chess", "Chess", "Home")</li>
                    <li>@Html.ActionLink("Resize Image", "Collab", "Home")</li>
                    <li>@Html.ActionLink("Draw On An Image", "uploadToCanvas", "Home")</li>
                    <li>@Html.ActionLink("Draw With Friends", "draw", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <!--<img src="~/Content/images/wall.png", class="imgg" />-->
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
